{% extends "base/class.php.twig" %}

{% block file_path %}
\Drupal\{{ module }}\ExoThemeProvider\{{ class_name }}.
{% endblock %}

{% block namespace_class %}
namespace Drupal\{{ module }}\ExoThemeProvider\{{ plugin_id_camel }};
{% endblock %}

{% block use_class %}
use Drupal\exo\ExoThemeProvider\ExoThemeProviderBase;
{% endblock %}

{% block class_declaration %}
/**
 * Plugin implementation of the '{{ plugin_id }}' eXo theme provider.
 *
 * @ExoThemeProvider(
 *   id = "{{ plugin_id }}",
 *   library = "theme",
 *   path = "css",
 *   filename = "{{ module|replace('_', '-') }}.theme.css",
 *   template = "{{ plugin_id_camel }}/ExoTheme.scss.twig",
 * )
 */
class {{ class_name }} extends ExoThemeProviderBase {% endblock %}
{% block class_methods %}
{% endblock %}
